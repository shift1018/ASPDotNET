@page "{id:int}"
@model MyFriends.Pages.DeleteModel
@{
}

<div>
     <h4>Friend Record</h4>
     <p>Id: @Model.Friend.Id</p>
     <p>Name: @Model.Friend.Name</p>
     <p>Age: @Model.Friend.Age</p>
     <br>
     <h5>Are you sure you want to delete this record?</h5>
     <br>
     <a asp-page="/view" asp-route-id="@Model.Friend.Id" class="btn btn-info mr-4">Cancel</a>
     <br><br>
     <form method="POST">
           <input type="hidden" asp-for="Friend.Id" />
          <input type="submit" value="Yes, Delete" class="btn btn-info" />
     </form>

</div>
