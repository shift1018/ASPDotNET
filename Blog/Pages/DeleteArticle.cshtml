@page "{id:int}"
@model Blog.Pages.DeleteArticleModel
@{
}


<div>
     
     
     <p>Title: @Model.article.Title</p>
     <label asp-for="article.Body" class="control-label"></label>
     <textarea asp-for="article.Body" class="form-control" >@Model.article.Body</textarea>
     <br>
     <h5>Are you sure you want to delete this article?</h5>
     <br>
     <a asp-page="/ViewArticle" asp-route-id="@Model.article.Id" class="btn btn-info mr-4">Cancel</a>
     <br><br>
     <form method="POST">
           <input type="hidden" asp-for="article.Id" />
          <input type="submit" value="Yes, Delete" class="btn btn-info" />
     </form>

</div>
