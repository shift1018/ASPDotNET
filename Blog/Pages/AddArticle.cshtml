@page
@model Blog.Pages.AddArticleModel
@{
    ViewData["Title"] = "Add Article";
}
<h1>Create a new Article</h1>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Title" class="form-label"></label>
        <input asp-for="Input.Title" class="form-control" />
        <span asp-validation-for="Input.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Body" class="form-label"></label>
        <textarea asp-for="Input.Body" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Input.Body" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Add Article</button>
    </div>
</form>


@section scripts{
<partial name="_ValidationScriptsPartial"></partial>
}