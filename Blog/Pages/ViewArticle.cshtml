

@page "{Id:int}"

@model Blog.Pages.ViewArticleModel
@{
    ViewData["Title"] = Model.article.Title;
}

<div class="container">
    <form method="post">
               <div class="form-group">
                    <label asp-for="article.Id" class="control-label"></label>
                    <input asp-for="article.Id" class="form-control" value="@Model.article.Id" disabled />
               </div>

                <div class="form-group">
                    <label asp-for="article.Author" class="control-label"></label>
                    <input asp-for="article.Author" class="form-control" value="Posted by @Model.article.Author on @Model.article.Created" disabled/>
               </div>

               <div class="form-group">
                    <label asp-for="article.Title" class="control-label"></label>
                    <input asp-for="article.Title" class="form-control" value="@Model.article.Title" />
                    <span asp-validation-for="article.Title"></span>
               </div>

               <div class="form-group">
                    <label asp-for="article.Body" class="control-label"></label>
                    <textarea rows="5" asp-for="article.Body" class="form-control" >@Model.article.Body</textarea>
                    <span asp-validation-for="article.Body"></span>
               </div>

               <div class="form-group main-content-one-col">
                
                        
                    <input type="submit" value="Update article" class="btn btn-info" Visible = false;/>
                    <a asp-page="/deleteArticle" asp-route-id="@Model.article.Id" class="btn btn-info" Visible = false>Delete</a>
                        

                            @* <form method="POST">
           <input type="hidden" asp-for="article.Id" />
          <input type="submit" value="Yes, Delete" class="btn btn-info" />
     </form> *@

               </div>
            </form>
            
</div>

